# Development Security Settings
NODE_ENV=development
ENABLE_HTTPS=false
BIND_LOCALHOST_ONLY=true
BLOCK_NON_LOCALHOST=true

# Server Configuration
PORT=5001

# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=our_mysql_password
MYSQL_DATABASE=fswd_bank
MYSQL_PORT=3306

MONGODB_URI=mongodb://localhost:27017/fswd_bank

# JWT Configuration
JWT_SECRET=our_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=our_secure_refresh_secret_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=24h
JWT_REFRESH_ENABLED=true

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=our_email@gmail.com
EMAIL_PASS=our_email_app_password
EMAIL_FROM=noreply@fswdbank.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client Configuration
CLIENT_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=our_google_client_id
GOOGLE_CLIENT_SECRET=our_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Security Configuration
ENCRYPTION_KEY=our_32_character_encryption_key_here

# Two-Factor Authentication
TOTP_ALGORITHM=sha1
TOTP_DIGITS=6
TOTP_PERIOD=30
TOTP_WINDOW=2

# Session Management
SESSION_TIMEOUT=86400
MAX_SESSIONS_PER_USER=5

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900
PASSWORD_HISTORY_SIZE=5 